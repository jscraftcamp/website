{
	"name": "website",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"node": ">= 22.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write . '!participants/*.json'",
		"logos": "tsx scripts/logo-to-social-media-pngs.ts",
		"update-schema": "tsx create-json-schema.ts > static/schemas/participants.2024.json && prettier --write ./static/schemas/participants.2024.json"
	},
	"packageManager": "pnpm@9.1.0",
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@fontsource/poppins": "5.0.14",
		"@fontsource/source-sans-pro": "5.0.8",
		"@playwright/test": "^1.44.0",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^20.14.1",
		"@typescript-eslint/eslint-plugin": "7.8.0",
		"@typescript-eslint/parser": "7.8.0",
		"eslint": "8.57.1",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "^3.0.3",
		"globals": "^16.0.0",
		"jsonc-parser": "3.2.1",
		"playwright": "^1.44.0",
		"prettier": "3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.22.4",
		"svelte-check": "^4.0.0",
		"tslib": "2.6.2",
		"tsx": "^4.10.5",
		"typescript": "^5.5.0",
		"typescript-eslint": "^8.26.0",
		"vite": "^5.4.4",
		"vitest": "1.6.0",
		"zod": "3.23.8",
		"zod-to-json-schema": "3.23.0"
	},
	"type": "module"
}
