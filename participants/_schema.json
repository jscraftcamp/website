{
	"$id": "https://jscraftcamp.org/schemas/participants.2023.json",
	"$ref": "#/definitions/participantSchema",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"definitions": {
		"participantSchema": {
			"type": "object",
			"properties": {
				"$schema": {
					"type": "string",
					"enum": ["./_schema.json", "https://jscraftcamp.org/schemas/participants.2023.json"]
				},
				"name": { "type": "string", "minLength": 2 },
				"company": {
					"anyOf": [{ "type": "string", "minLength": 2 }, { "type": "null" }]
				},
				"when": {
					"type": "object",
					"properties": {
						"friday": { "type": ["boolean", "null"] },
						"saturday": { "type": ["boolean", "null"] }
					},
					"additionalProperties": false
				},
				"iCanTakeNotesDuringSessions": { "type": "boolean" },
				"tags": {
					"type": "array",
					"items": { "type": "string" },
					"minItems": 1
				},
				"vegan": { "type": ["boolean", "null"] },
				"vegetarian": { "type": ["boolean", "null"] },
				"allergies": {
					"anyOf": [
						{ "type": "array", "items": { "type": "string" }, "minItems": 1 },
						{ "type": "null" }
					]
				},
				"whatIsMyConnectionToJavascript": {
					"type": "string",
					"minLength": 3,
					"maxLength": 200
				},
				"whatCanIContribute": {
					"type": "string",
					"minLength": 3,
					"maxLength": 200
				},
				"tShirt": {
					"anyOf": [
						{
							"type": "object",
							"properties": {
								"type": { "type": "string", "enum": ["fitted", "regular"] },
								"size": {
									"type": "string",
									"enum": ["S", "M", "L", "XL", "XXL"]
								}
							},
							"required": ["type", "size"],
							"additionalProperties": false
						},
						{ "type": "null" }
					]
				},
				"twitter": {
					"anyOf": [
						{ "type": "string", "pattern": "^[a-z_]{1}[a-z0-9_]{0,14}$" },
						{ "type": "null" }
					]
				},
				"mastodon": {
					"anyOf": [
						{
							"allOf": [{ "type": "string" }]
						},
						{ "type": "null" }
					]
				}
			},
			"required": [
				"$schema",
				"name",
				"when",
				"iCanTakeNotesDuringSessions",
				"tags",
				"whatIsMyConnectionToJavascript",
				"whatCanIContribute"
			],
			"additionalProperties": false
		}
	}
}
