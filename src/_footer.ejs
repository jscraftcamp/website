<footer>
  <div>
    <h3 class="<%=public._data.baseColor %>-text">Sitemap</h3>
    <ul>
    <% for(var i in public._data.navigationItems.main) { %>
        <% var item = public._data.navigationItems.main[i] %>
        <li><a class="<%=public._data.baseColor %>-text" href="<%= item.url %>"><%= item.title %></a></li>
    <% } %>
    </ul>
  </div>
  <div>
    <h3 class="<%=public._data.baseColor %>-text">Get in touch</h3>
    <ul>
      <li><a class="<%=public._data.baseColor %>-text" href="/theteam.html">The Team</a></li>
      <li><a class="<%=public._data.baseColor %>-text" href="https://twitter.com/jscraftcamp">Twitter</a></li>
      <li><a class="<%=public._data.baseColor %>-text" href="/imprint.html">Imprint</a></li>
    </ul>
  </div>
  <div style="flex: 1.5">
    <h3 class="<%=public._data.baseColor %>-text">Archive</h3>
    <ul>
      <% for(var i in public._data.navigationItems.archive) { %>
          <% var item = public._data.navigationItems.archive[i] %>
          <li><a class="<%=public._data.baseColor %>-text" href="<%= item.url %>"><%= item.title %></a></li>
      <% } %>
    </ul>
  </div>
</footer>
